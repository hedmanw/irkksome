<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="base_string">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="category_hint" parent="base_string">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tip_font_color</item>
    </style>

    <style name="list_item.hint" parent="base_string">
        <item name="android:textColor">@color/tip_font_color</item>
    </style>

    <style name="list_item" parent="base_string">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="list_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayish</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:layout_marginLeft">22dp</item>-->
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="new_connection_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
    </style>

    <style name="connection_type_button">
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/small_horizontal_margin</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="list_item_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
